<button
  id="theme-toggle"
  type="button"
  class="rounded-xl border border-gray-700/60 px-3 py-2 text-sm hover:bg-blue-600/20 focus:outline-none focus:ring focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-neutral-950 transition"
  aria-label="Toggle color theme"
